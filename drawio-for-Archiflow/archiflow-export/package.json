{
  "name": "archiflow-network-manager",
  "version": "1.0.0",
  "description": "ArchiFlow Network Management System - Draw.io Integration Module",
  "main": "backend/index.js",
  "type": "module",
  "scripts": {
    "start:websocket": "node backend/websocket-server.js",
    "start:drawio": "node backend/drawio-server.js",
    "start": "echo 'Services are managed via Docker. Run: docker-compose up'",
    "test": "node tests/integration/test-ip-management.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart"
  },
  "keywords": [
    "network",
    "diagram",
    "drawio",
    "ipam",
    "mcp",
    "archiflow"
  ],
  "author": "ArchiFlow Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.0",
    "pg": "^8.16.3",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "archiflow": {
    "features": {
      "ipManagement": true,
      "templates": true,
      "versioning": true,
      "autoSave": true,
      "deployment": true
    },
    "integration": {
      "drawio": {
        "method": "iframe",
        "version": "20.0.0+",
        "port": 8081
      },
      "websocket": {
        "port": 3333,
        "protocol": "ws"
      },
      "netbox": {
        "port": 8000,
        "plugin": "netbox_archiflow"
      }
    }
  }
}
